para as checkboxes {
	position: absolute;
	margin: 30px 0;
	width: 310px;
	border-bottom: 2ps solid white;
}

para os labels do checkbox {
	position: absolute;
	top: 50%;
	left: 5px;
	transform: translateY(-50%);
	color: white;
	font-size: 1em;
	pointer-events: none;
}

input {
	width: 100%;
	height: 50px;
	background: transparent;
	border: none;
	outline: none;
	font-size: 1em;
	padding: 0 35px 0 5px;
	color: white;
}

fieldset {
	background: transparent;
	border: 2px solid rgba(255,255,255,0.5);
	border-radius: 20px;
	backdrop-filter: blur(15px);
}

